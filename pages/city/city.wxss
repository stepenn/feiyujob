page{
  height:100%;
}
.city_box{
  height:100%;
  background: #fff;
  display: flex;
  padding-top:24rpx;
}
.city_left{
  flex: 1;
  padding-left:10rpx;
  box-sizing: border-box;
}
.city_right{
  width: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.letter_item{
  flex: 1;
  display: block;
  font-size: 24rpx;
  color: #33B9FF;
  text-align: center;
}
.national{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 30rpx;
}
.new_city{
  font-size: 28rpx;
}
.new_city_title{
  line-height: 50rpx;
  color: #3e3e3e;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  margin-top:20rpx;
}
.new_city_box{
  display: flex;
  flex-wrap: wrap;
}
.new_city_text{
  width: 200rpx;
  text-align: center;
  line-height: 70rpx;
  background: #fff;
  margin:0 0 22rpx 22rpx;
  border-radius:10rpx; 
  border:2rpx solid #828282;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.city_first_letter{
  line-height: 40rpx;
  height: 40rpx;
  width:40rpx;
  font-size: 28rpx;
  background: #339bcf;
  border-radius: 100%;
  color: #fff;
  text-align:center;
  margin-left:25rpx;
  margin-bottom:20rpx;
}
.city_name{
  display: inline-block;
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
  width: 200rpx;
  text-align: center;
  line-height: 70rpx;
  margin:0 0 22rpx 22rpx;
  border-radius:10rpx; 
  border:2rpx solid #828282;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
