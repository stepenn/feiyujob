/* pages/preview/preview.wxss */
@import "../resume/resume.wxss";
page{
  width:100%;
  height:100%;
}
.header{
  height:auto;
  border-bottom:2rpx solid #f1f1f1;

}
.name{
  font-size: 48rpx;
  font-weight:500;
  margin-bottom:16rpx;
}
.head{
  width:130rpx;
  height:130rpx;
  border-radius:50%;
  margin-right: 0;
  border: none;
}
.edu-info{
  padding-top:20rpx;
}
.edu-info li{
  margin-right:20rpx;
}
.title{
  font-size:36rpx;
  color:#111;
}
.edu-img{
  width:32rpx;
  height:32rpx;
  display: inline-block;
  vertical-align: middle
}
.edu{
  display: inline-block;
  color:#959595;
  font-size:32rpx;
}
.dot{
  width:24rpx;
  height:24rpx;
}
.borderC{
  border-bottom:none;
}
.section-text{
  display: flex;
  justify-content: flex-start;
  font-size:30rpx;
  padding-left:30rpx;
  padding-bottom:30rpx;
  border-bottom:2rpx solid #e7eaf1;
  color: #6c6c6c;
}
.line{
  display: inline-block;
  background: #6c6c6c;
  width:2rpx;
  height:32rpx;
  margin:8rpx 20rpx;
}
.pole{
  width:100%;
}
.section-edu{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:30rpx;
  padding:20rpx 20rpx 30rpx 30rpx;
  color: #777;
}
.section-con{
  padding:0 20rpx 30rpx 30rpx;
  border-bottom:2rpx solid #e7eaf1;
}
.project{
  color:#444;
  font-weight: 600;
}
.content{
  font-size:30rpx;
  color: #777;
  line-height:48rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:4; 
}
.edu-time{
  font-size:32rpx;
  color:#333;
}